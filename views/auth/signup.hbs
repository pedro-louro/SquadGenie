<div class="card text-center mb-3 credentials">
    <div class="card-body crdtls">
        <form  action="/signup" method="POST" class="frm">
            <!-- <h5 class="card-title-sgn">Signup</h5> -->

            <div class="input-group mb-3">
                <span class="input-group-text bckgrd" id="basic-addon1">
                    <i class="bi bi-person"></i>
                </span>
                <input type="text" class="form-control" placeholder="Username" aria-label="Username" name="username">
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text bckgrd" id="basic-addon1">
                    <i class="bi bi-mailbox"></i>
                </span>
                <input type="email" class="form-control" placeholder="Email" aria-label="Email" name="email"/>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text bckgrd" id="basic-addon1">
                    <i class="bi bi-lock"></i>
                </span>
                <input type="password" class="form-control" placeholder="Password" aria-label="Password" name="password"/>
            </div>

            <button class="btn btn-warning" type="submit">Signup</button>
        </form>
    </div>
</div>

{{#if errorMessage}}
    <div class="alert alert-danger errorMessage" role="alert">
        {{errorMessage}}
    </div>
{{/if}}